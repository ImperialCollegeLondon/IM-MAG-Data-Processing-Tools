// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"build": {
        "dockerfile": "./Dockerfile",
        "context": "."
    },
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2.4.2": {
			"installZsh": "true",
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000",
            "upgradePackages": "true"
        },
        "ghcr.io/gvatsal60/dev-container-features/pre-commit:1": {},
	},
	"postCreateCommand": "pre-commit install-hooks && pre-commit autoupdate",
	// install poetry on first startup in vscode
	"postStartCommand": "poetry install",

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				// not using venvs? uncomment this
                //"python.defaultInterpreterPath": "/usr/local/bin/python"

                // use the active venv
                "python.defaultInterpreterPath": ".venv/bin/python3",

				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				}
			},
			"extensions": [
				"EditorConfig.EditorConfig",
				"ms-python.python",
				"ms-python.flake8",
				"ms-python.black-formatter",
				"github.vscode-github-actions",
				"ms-vscode.hexeditor",
				"ms-python.vscode-pylance",
				"ms-python.debugpy",
				"GitHub.copilot",
				"GitHub.copilot-chat"
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode"
}
